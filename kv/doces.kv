<Doces>:
    text_input: text_input
    FloatLayout:
        canvas:
            Color:
                #rgba:  0.6211,0.8906,0.9141,1
                #rgba: 0.5, 0.7773,0.8047,1
                rgba: 0.4922, 0.7969,0.8281,.9
            Rectangle:
                size: self.size
                pos: self.pos






    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"


        FileChooserListView:
            id: filechooser

            #path: "/Users/Mabel/work/GOROROBA/doces/"
            #path_f: "/Users/Mabel/work/GOROROBA/favoritas_S2/"
            path: root.path_d
            path_f: root.path_f
            #on_selection: text_input.text =self.selection and self.selection[0] or ''
            on_selection: root.load(filechooser.path, filechooser.selection)
            size_hint_x:.5

        ScrollView:
            id:scrlv
            TextInput:
                id: text_input
                size_hint_x: 1.5
                size_hint_y:None
                height: max((len(self._lines)+1)*self.line_height,scrlv.height)
                multiline: True
                #text_size:self.width
                #padding: 10,10

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 400
            Label:
                id: doces_msg
                #text: "Novo nome da receita.txt aqui embaixo"
                color: (1,0,0,1)
                size_hint: .8, .1
                pos_hint: {"top": .5, "right" :.9}


    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        pos_hint:{'top':1}
        BoxLayout:
            size_hint_y: None
            height: 100

            #Button:
            #    text: "Abrir receita"
            #    on_release: root.load(filechooser.path, filechooser.selection)
                #on_release:app.change_screen("receitas")
            #Button:
            #     text: "Salvar receita modificada"
            #     on_release: root.save(filechooser.path, text_input2.text)

            TextInput:
                id: text_input2
                size_hint_y: None
                height: 100
                multiline: False
                hint_text: "Novo nome da receita"
            Button:
                text: "salvar"
                on_press: root.save(filechooser.path, text_input2.text)
                on_release: filechooser._update_files()
            Button:
                text: "favoritar S2"
                on_release: root.save(filechooser.path_f, text_input2.text)
            #Button:
            #    text: "Refresh"
